<!-- Using Spring -->	
	<servlet>
		<servlet-name>CXFServlet1</servlet-name>
		<display-name>CXF Servlet1</display-name>
		<servlet-class>
			org.apache.cxf.transport.servlet.CXFServlet
		</servlet-class>
		<init-param>
			<param-name>config-location</param-name>
			<param-value>/WEB-INF/beans1.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>CXFServlet1</servlet-name>
		<url-pattern>/jaxrs/*</url-pattern>
	</servlet-mapping>
	
	<!-- no Spring, use Guice -->
	<servlet>
		<servlet-name>MyGuiceCXFJsonService</servlet-name>
		<display-name>CXF Servlet</display-name>
		<servlet-class>
			idv.zanyking.jaxrs.config.MyGuiceCXFJaxrsServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyGuiceCXFJsonService</servlet-name>
		<url-pattern>/json/*</url-pattern>
	</servlet-mapping>

	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>